{# templates/veille_numerique/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Veille numerique | Mon Portfolio{% endblock %}

{% block body %}

    <div class="container">
        <h1>Bienvenue sur ma veille numerique !</h1>
        <p>Voici la page de mes veille numerique de mon portfolio Symfony.</p>

        {% if articles is not empty %}
        <ul>
            {% for article in articles %}
                <li>
                    <a href="{{ article.link }}" target="_blank">{{ article.title }}</a><br>
                    <small>{{ article.pubDate }}</small>
                    <p>{{ article.description }}</p>
                </li>
            {% endfor %}
        </ul>
        {% else %}
            <p>Aucun article disponible pour le moment.</p>
        {% endif %}
    </div>

{% endblock %}
